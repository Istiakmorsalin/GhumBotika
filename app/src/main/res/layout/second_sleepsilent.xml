<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:baselineAligned="false" android:orientation="vertical"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:background="#000000">
	<TextView android:id="@+id/textView1" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="Enter Your Location Name"
		android:textStyle="bold" android:textSize="17px" android:textColor="#FF0000" />
	<EditText android:layout_gravity="fill_horizontal"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:id="@+id/editText1" android:textStyle="bold|italic"
		android:textColor="#2F4F4F" />
	<Button android:layout_gravity="fill" android:text="Submit"
		android:id="@+id/submit" android:layout_height="35px"
		android:textStyle="bold" android:layout_width="100px"
		android:typeface="monospace" android:textSize="15px"
		android:background="#2E8B57" android:textColor="#FFF5EE" />

</LinearLayout>
